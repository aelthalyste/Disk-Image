                        </StackPanel>
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Name="backupAreaTab">
                <TabItem.Header>
                    <StackPanel Height="48" Width="175" Orientation="Horizontal">
                        <Image Width="35" Margin="-4, 0, 0, 0">
                            <Image.Style>
                                <Style TargetType="Image">
