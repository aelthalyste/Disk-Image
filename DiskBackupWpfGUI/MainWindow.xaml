        </StackPanel>

        <TabControl Name="mainTabControl" TabStripPlacement="Left" BorderThickness="1,0,0,0" Grid.Row="2" BorderBrush="#428BCA" Grid.ColumnSpan="2" SelectionChanged="mainTabControl_SelectionChanged">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Grid Name="Panel">
                                    <ContentPresenter x:Name="ContentSite"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        ContentSource="Header"
                                        Margin="10,2"/>
                                    <Border BorderBrush="White" BorderThickness="0,0,0,1"/>
                                </Grid>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Panel" Property="Background" Value="#3b7ebb" />
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="False">
                                        <Setter TargetName="Panel" Property="Background" Value="#194771"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.Resources>

            <TabItem Name="createTaskTab">
                <TabItem.Header>
                    <StackPanel Height="48" Width="175" Orientation="Horizontal">
                        <Image Width="38" Margin="-3,0,0,0">
                            <Image.Style>
                                <Style TargetType="Image">
                                    <Setter Property="Source" Value="Resources\Icon\icons8_create_2.ico" />
                                </Style>
                            </Image.Style>
                        </Image>
                        <TextBlock Text="{DynamicResource createTask}" Margin="10,0" VerticalAlignment="Center" Style="{StaticResource TabItemText}"/>
                    </StackPanel>
                </TabItem.Header>
                <Grid Background="White">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="425"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <DockPanel>
                        <StackPanel>
                            <DockPanel Margin="-5,0" Grid.Column="0">
                                <Button Name="btnCreateTask" HorizontalAlignment="Left" Margin="10,4,15,4" Style="{StaticResource BlueButton}" 
                                    Width="110" Height="32" Click="btnCreateTask_Click" IsEnabled="False" Cursor="Hand">
                                    <Button.Content>
                                        <StackPanel Orientation="Horizontal">
                                            <Image Height="26">
                                                <Image.Style>
                                                    <Style TargetType="Image">
                                                        <Setter Property="Source" Value="Resources/Icon/u58.png" />
                                                    </Style>
                                                </Image.Style>
                                            </Image>
                                            <TextBlock Text="{DynamicResource createTask}" VerticalAlignment="Center" Margin="2,2" Style="{StaticResource CreateTaskButtonText}"/>
                                        </StackPanel>
                                    </Button.Content>
                                </Button>
                                <TextBlock Name="lblCreateTaskWarning" Text="{DynamicResource createTaskContent}" VerticalAlignment="Center" />
                                <Button Name="btnTaskRefreshDisk" ToolTip="{DynamicResource refreshDisks}" Click="btnTaskRefreshDisk_Click" Width="32" Height="32" HorizontalAlignment="Right" Margin="5,4,10,4" Style="{StaticResource ImageButton}">
                                    <Button.Content>
                                        <Image Height="28">
                                            <Image.Style>
                                                <Style TargetType="Image">
                                                    <Setter Property="Source" Value="Resources/Icon/icons8_refresh.ico" />
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsEnabled, RelativeSource={RelativeSource AncestorType=Button}}" Value="False">
                                                            <Setter Property="Source" Value="Resources/Icon/icons8_synchronize_disable.ico"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Image.Style>
                                        </Image>
                                    </Button.Content>
                                </Button>
                            </DockPanel>

                            <ListView Name="listViewDisk" Height="370" Margin="5" SelectionChanged="listViewDisk_SelectionChanged">
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Width="70">
                                            <GridViewColumn.Header>
                                                <CheckBox Name="chbDiskSelectDiskAll" Checked="chbDiskSelectDiskAll_Checked" Unchecked="chbDiskSelectDiskAll_Unchecked" Cursor="Hand" Margin="12,0,0,0"/>
                                            </GridViewColumn.Header>
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <CheckBox IsChecked="{Binding Path=IsSelected, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ListViewItem}}}"
                                                              Checked="chbDisk_Checked" Unchecked="chbDisk_Unchecked" Cursor="Hand" Margin="40,0,0,0"/>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                        <GridViewColumn Header="{DynamicResource volume}" Width="220">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal">
                                                        <Image Style="{StaticResource OSListViewItemImage}" />
                                                        <TextBlock Text="{Binding Name}" TextAlignment="Left" VerticalAlignment="Center" Margin="4,0"/>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                        <GridViewColumn Header="{DynamicResource letter}" Width="100" >
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding Letter}" TextAlignment="Center"/>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                        <GridViewColumn Header="{DynamicResource area}" Width="110" >
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding StrSize}" TextAlignment="Center"/>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn >
                                        <GridViewColumn Header="{DynamicResource freeSize}" Width="110" >
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding StrFreeSize}" TextAlignment="Center"/>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                        <GridViewColumn Header="{DynamicResource type}" Width="110" >
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding DiskType}" TextAlignment="Center"/>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                        <GridViewColumn Header="{DynamicResource fileSystem}" Width="140" >
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding FileSystem}" TextAlignment="Center"/>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                        <GridViewColumn Header="{DynamicResource statu}" Width="185" >
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding Status}" TextAlignment="Center"/>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                    </GridView>
                                </ListView.View>
                                <!-- Gruplama işlemi-->
                                <ListView.GroupStyle>
                                    <GroupStyle >
                                        <GroupStyle.ContainerStyle>
                                            <Style TargetType="{x:Type GroupItem}">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate>
                                                            <Expander Tag="{Binding Name}" IsExpanded="True" Margin="5,0,0,0" Loaded="Expander_Loaded">
                                                                <Expander.Header>
                                                                    <WrapPanel Orientation="Horizontal" >
                                                                        <CheckBox Name="HeaderCheckBox" Checked="HeaderCheckBox_Checked" Unchecked="HeaderCheckBox_Unchecked" Tag="{Binding Name}" Margin="5,3,5,0" Cursor="Hand"/>
                                                                        <TextBlock Name="txtGroupName" Text="{Binding Name}" FontWeight="Bold" FontSize="15" VerticalAlignment="Center" Margin="20,0,0,0"/>
                                                                        <TextBlock Name="txtTotalSize" FontWeight="Bold" FontSize="12" Margin="10,0,0,0" VerticalAlignment="Center"/>
                                                                        <TextBlock Name="txtNumberOfItems" Text="{Binding ItemCount}" FontSize="12" Foreground="Silver" Margin="10,0,0,0" VerticalAlignment="Center" />
                                                                        <TextBlock Text="{DynamicResource items}" FontSize="12" Foreground="Silver" Margin="5,0,0,0" VerticalAlignment="Center" />
                                                                        <Rectangle Margin="10,0,0,0" Width="820" Stroke="Silver" StrokeThickness="1" VerticalAlignment="Center"/>
                                                                    </WrapPanel>
                                                                </Expander.Header>
                                                                <ItemsPresenter/>
                                                            </Expander>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </GroupStyle.ContainerStyle>
                                    </GroupStyle>
                                </ListView.GroupStyle>
                                <ListView.ItemContainerStyle>
                                    <Style TargetType="ListViewItem">
                                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                    </Style>
                                </ListView.ItemContainerStyle>
                            </ListView>
                        </StackPanel>
                    </DockPanel>
                    <DockPanel Grid.Row="1" Margin="5,0" VerticalAlignment="Top">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <StackPanel Name="diskInfoStackPanel" Orientation="Vertical" HorizontalAlignment="Stretch">

                            </StackPanel>
                        </ScrollViewer>
                    </DockPanel>
                </Grid>
            </TabItem>

            <TabItem Name="taskTab">
                <TabItem.Header>
                    <StackPanel Height="48" Width="175" Orientation="Horizontal">
                        <Image Width="30">
                            <Image.Style>
                                <Style TargetType="Image">
                                    <Setter Property="Source" Value="Resources\Icon\icons8_system_task_3.ico" />
                                </Style>
                            </Image.Style>
                        </Image>
                        <TextBlock Text="{DynamicResource tasks}" Margin="14,0" VerticalAlignment="Center" Style="{StaticResource TabItemText}"/>
                    </StackPanel>
                </TabItem.Header>
                <Grid Background="White">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="45"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="425"/>
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <DockPanel>
                        <ListView Name="listViewTasks" Grid.ColumnSpan="2" MinHeight="415" Margin="5,0,0,5" VerticalAlignment="Top" SelectionChanged="listViewTasks_SelectionChanged" MouseDoubleClick="listViewTasks_MouseDoubleClick">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Width="40">
                                        <GridViewColumn.Header>
                                            <CheckBox Name="chbAllTasksChechbox" Checked="chbAllTasksChechbox_Checked" Unchecked="chbAllTasksChechbox_Unchecked" Cursor="Hand"/>
                                        </GridViewColumn.Header>
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <CheckBox IsChecked="{Binding Path=IsSelected, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ListViewItem}}}"
                                                          HorizontalAlignment="Center" Cursor="Hand" Checked="chbTask_Checked" Unchecked="chbTask_Unchecked"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Width="65">
                                        <GridViewColumn.Header>
                                            <GridViewColumnHeader Content="{DynamicResource type}" Tag="Type" Click="listviewTasksColumnHeaderSort_Click"/>
                                        </GridViewColumn.Header>
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Style="{StaticResource MTBListViewType}" TextAlignment="Center"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Width="135">
                                        <GridViewColumn.Header>
                                            <GridViewColumnHeader Content="{DynamicResource taskName}" Tag="Name" Click="listviewTasksColumnHeaderSort_Click"/>
                                        </GridViewColumn.Header>
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Name}" TextAlignment="Left"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Width="65" >
                                        <GridViewColumn.Header>
                                            <GridViewColumnHeader Content="{DynamicResource object}" Tag="Obje" Click="listviewTasksColumnHeaderSort_Click"/>
                                        </GridViewColumn.Header>
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Obje}" TextAlignment="Center"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Width="125" >
                                        <GridViewColumn.Header>
                                            <GridViewColumnHeader Content="{DynamicResource statu}" Tag="Status" Click="listviewTasksColumnHeaderSort_Click"/>
                                        </GridViewColumn.Header>
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding StrStatus}" TextAlignment="Center"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Width="125" >
                                        <GridViewColumn.Header>
                                            <GridViewColumnHeader Content="{DynamicResource lastStudy}" Tag="LastWorkingDate" Click="listviewTasksColumnHeaderSort_Click"/>
                                        </GridViewColumn.Header>
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding LastWorkingDate}" Style="{StaticResource MTBListViewLastWorkingDate}" TextAlignment="Center"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Width="125" >
                                        <GridViewColumn.Header>
                                            <GridViewColumnHeader Content="{DynamicResource nextStudy}" Tag="NextDate" Click="listviewTasksColumnHeaderSort_Click"/>
                                        </GridViewColumn.Header>
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding NextDate}" Style="{StaticResource MTBListViewNextDate}" TextAlignment="Center"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Width="175" >
                                        <GridViewColumn.Header>
                                            <GridViewColumnHeader Content="{DynamicResource target}" Tag="BackupStorageInfo.StorageName" Click="listviewTasksColumnHeaderSort_Click"/>
                                        </GridViewColumn.Header>
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding BackupStorageInfo.StorageName}" TextAlignment="Center"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Width="155" >
                                        <GridViewColumn.Header>
                                            <GridViewColumnHeader Content="{DynamicResource description}" Tag="Descripiton" Click="listviewTasksColumnHeaderSort_Click"/>
                                        </GridViewColumn.Header>
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Descripiton}" TextWrapping="Wrap" TextAlignment="Center"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                </GridView>
                            </ListView.View>
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding EnableDisable}" Value="1">
                                            <Setter Property="Foreground" Value="LightSlateGray"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding EnableDisable}" Value="2">
                                            <Setter Property="Foreground" Value="Red"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </ListView.ItemContainerStyle>
                        </ListView>
                    </DockPanel>
                    <DockPanel Grid.Column="1" VerticalAlignment="Top" Height="415" Background="#F2F2F2">
                        <StackPanel HorizontalAlignment="Center">
                            <Button Name="btnTaskEdit" ToolTip="{DynamicResource edit}" Width="32" Height="32" HorizontalAlignment="Center" Margin="0,25,0,5" 
                                    Style="{StaticResource ImageButton}" Grid.Column="1" IsEnabled="False" Click="btnTaskEdit_Click">
                                <Button.Content>
                                    <Image Height="25" Width="25" HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <Image.Style>
                                            <Style TargetType="Image">
                                                <Setter Property="Source" Value="Resources/Icon/icons8_edit_property_1.ico" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsEnabled, RelativeSource={RelativeSource AncestorType=Button}}" Value="False">
                                                        <Setter Property="Source" Value="Resources/Icon/icons8_edit_property_1_disable.ico"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Image.Style>
                                    </Image>
                                </Button.Content>
                            </Button>
                            <Button Name="btnTaskStart" ToolTip="{DynamicResource start}" Width="32" Height="32" HorizontalAlignment="Center" Margin="0,5"  
                                    Style="{StaticResource ImageButton}" Grid.Column="1" Click="btnTaskStart_Click" IsEnabled="False">
                                <Button.Content>
                                    <Image Height="28" Width="28" HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <Image.Style>
                                            <Style TargetType="Image">
                                                <Setter Property="Source" Value="Resources/Icon/icons8_play.ico" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsEnabled, RelativeSource={RelativeSource AncestorType=Button}}" Value="False">
                                                        <Setter Property="Source" Value="Resources/Icon/icons8_circled_play.ico"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Image.Style>
                                    </Image>
                                </Button.Content>
                            </Button>
                            <Button Name="btnTaskPause" Click="btnTaskPause_Click" ToolTip="{DynamicResource pause}" HorizontalAlignment="Center" Margin="0,5" 
                                    Style="{StaticResource ImageButton}" Width="32" Height="32" Grid.Column="1" IsEnabled="False">
                                <Button.Content>
                                    <Image>
                                        <Image.Style>
                                            <Style TargetType="Image">
                                                <Setter Property="Source" Value="Resources/Icon/icons8-pause-button-96.png" />
                                                <Setter Property="Height" Value="30"/>
                                                <Setter Property="Width" Value="30"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsEnabled, RelativeSource={RelativeSource AncestorType=Button}}" Value="False">
                                                        <Setter Property="Source" Value="Resources/Icon/icons8-pause-button-96_disable.png"/>
                                                        <Setter Property="Height" Value="30"/>
                                                        <Setter Property="Width" Value="30"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Image.Style>
                                    </Image>
                                </Button.Content>
                            </Button>

                            <Button Name="btnTaskStop" ToolTip="{DynamicResource stop}" Width="32" Height="32" HorizontalAlignment="Center" Margin="0,5" 
                                    Style="{StaticResource ImageButton}" Grid.Column="1" IsEnabled="False" Click="btnTaskStop_Click">
                                <Button.Content>
                                    <Image HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <Image.Style>
                                            <Style TargetType="Image">
                                                <Setter Property="Source" Value="Resources/Icon/icons8_stop_8.ico" />
                                                <Setter Property="Height" Value="35"/>
                                                <Setter Property="Width" Value="35"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsEnabled, RelativeSource={RelativeSource AncestorType=Button}}" Value="False">
                                                        <Setter Property="Source" Value="Resources/Icon/icons8_stop_disable.ico"/>
                                                        <Setter Property="Height" Value="28"/>
                                                        <Setter Property="Width" Value="28"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
