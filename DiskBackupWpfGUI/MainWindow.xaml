                                        <Button Name="btnEMailAdvancedOptions" Width="160" Height="30" Style="{StaticResource BlueButton}" Cursor="Hand">
                                            <Button.Content>
                                                <StackPanel Orientation="Horizontal">
                                                    <Image Height="20" Width="20" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="2,0">
                                                        <Image.Style>
                                                            <Style TargetType="Image">
                                                                <Setter Property="Source" Value="Resources/Icon/icons8_settings_4.ico"/>
                                                            </Style>
                                                        </Image.Style>
                                                    </Image>
                                                    <TextBlock Text="{DynamicResource advancedOptions}" VerticalAlignment="Center" FontSize="14" Margin="5,0" Foreground="White"/>
                                                </StackPanel>
                                            </Button.Content>
                                        </Button>
                                        <Button Name="btnEMailNotificationSave" Width="160" Height="30" Style="{StaticResource BlueButton}" Cursor="Hand" Margin="40,0,0,0">
                                            <Button.Content>
                                                <StackPanel Orientation="Horizontal">
                                                    <Image Height="24" Width="24" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="2,0">
                                                        <Image.Style>
                                                            <Style TargetType="Image">
                                                                <Setter Property="Source" Value="Resources/Icon/icons8_save.ico"/>
                                                            </Style>
                                                        </Image.Style>
                                                    </Image>
                                                    <TextBlock Text="{DynamicResource save}" VerticalAlignment="Center" FontSize="14" Margin="5,0" Foreground="White"/>
                                                </StackPanel>
                                            </Button.Content>
                                        </Button>
                                    </StackPanel>

                                </Grid>
                            </Border>
                        </StackPanel>

                        <Image Source="Resources/Icon/logo_big.png" Grid.ColumnSpan="2" Grid.Row="2"></Image>
                        
                        <GroupBox Grid.Row="2" Grid.ColumnSpan="2" Margin="10" BorderBrush="#9ACFEA" BorderThickness="2" FontSize="14" Visibility="Collapsed">
                            <GroupBox.Header>
                                <TextBlock Text="{DynamicResource bandwithSetting}" Foreground="Black" FontWeight="Bold"/>
                            </GroupBox.Header>
                            <StackPanel Margin="10,20,0,0">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{DynamicResource downloadSpeed}" ></TextBlock>
                                        <RadioButton Content="{DynamicResource delimitation}" Name="rbtnDownloadDelimitation" GroupName="download" IsChecked="True" Margin="20,15,0,10" />
                                        <StackPanel Orientation="Horizontal">
                                            <RadioButton Content="{DynamicResource limit}" Name="rbtnDownload" GroupName="download" Checked="rbtnDownload_Checked" Unchecked="rbtnDownload_Unchecked" Margin="20,5,0,0" />
                                            <StackPanel Name="stackDownload" Orientation="Horizontal" IsEnabled="False">
                                                <TextBox Name="txtDownload" Text="100" Width="50" Height="28" FontSize="13" Margin="20,0,0,0" VerticalContentAlignment="Center" MaxLength="3"/>
                                                <StackPanel Margin="-21,0,0,0" VerticalAlignment="Center">
                                                    <Button Name="btnDownloadUp" Style="{StaticResource ArrowUpButton}" Content="▲" Width="20" Height="13" FontSize="8" VerticalContentAlignment="Top" BorderThickness="0" Click="btnDownloadUp_Click" />
                                                    <Button Name="btnDownloadDown" Style="{StaticResource ArrowDownButton}" Content="▼" Width="20" Height="13" FontSize="8" VerticalContentAlignment="Top" BorderThickness="0" Click="btnDownloadDown_Click" />
                                                </StackPanel>
                                            </StackPanel>
                                        </StackPanel>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="{DynamicResource uploadSpeed}" ></TextBlock>
                                        <RadioButton Content="{DynamicResource delimitation}" Name="rbtnUploadDelimitation" GroupName="upload" Margin="20,15,0,10" IsChecked="True" />
                                        <StackPanel Orientation="Horizontal">
                                            <RadioButton Content="{DynamicResource limit}" Name="rbtnUpload" GroupName="upload" Checked="rbtnUpload_Checked" Unchecked="rbtnUpload_Unchecked" Margin="20,5,0,0"  />
                                            <StackPanel Name="stackUpload" Orientation="Horizontal" IsEnabled="False">
                                                <TextBox Name="txtUpload" Text="100" Width="50" Height="28" FontSize="13" Margin="20,0,0,0" VerticalContentAlignment="Center" MaxLength="3"/>
                                                <StackPanel Margin="-21,0,0,0" VerticalAlignment="Center">
                                                    <Button Name="btnUploadUp" Style="{StaticResource ArrowUpButton}" Content="▲" Width="20" Height="13" FontSize="8" VerticalContentAlignment="Top" BorderThickness="0" Click="btnUploadUp_Click" />
                                                    <Button Name="btnUploadDown" Style="{StaticResource ArrowDownButton}" Content="▼" Width="20" Height="13" FontSize="8" VerticalContentAlignment="Top" BorderThickness="0" Click="btnUploadDown_Click" />
                                                </StackPanel>
                                            </StackPanel>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </GroupBox>

                    </Grid>
                </Grid>
            </TabItem>

            <TabItem  Name="helpTab">
                <TabItem.Header>
                    <StackPanel  Height="48" Width="175" Orientation="Horizontal ">
                        <Image Width="40" Margin="-5,0,0,0">
                            <Image.Style>
                                <Style TargetType="Image">
                                    <Setter Property="Source" Value="Resources\Icon\icons8_help_2.ico" />
                                </Style>
                            </Image.Style>
                        </Image>
                        <TextBlock Text="{DynamicResource help}" Margin="12,0" VerticalAlignment="Center" Style="{StaticResource TabItemText}"/>
                    </StackPanel>
                </TabItem.Header>
                <Grid Background="White">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="80"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Rectangle VerticalAlignment="Bottom" Stroke="#D7D7D7" Margin="0,0,0,15" StrokeThickness="1" HorizontalAlignment="Left" Width="1100"/>
                    <StackPanel>
                        <TextBlock Text="{DynamicResource help}" FontSize="22" Margin="10,0,0,5" FontWeight="Bold"/>
                        <StackPanel  Orientation="Horizontal" >
                            <TextBlock  Text="{DynamicResource forHelp}" FontSize="14" Foreground="#A1A1A1" Margin="20,0,0,0"/>
                            <TextBlock FontSize="14" Margin="5,0,5,0" >
                                <Hyperlink NavigateUri="mailto:destek@narbulut.com?subject=Yardim&amp;body=Test" RequestNavigate="OnNavigate">
                                    destek@narbulut.com
                                </Hyperlink>
                            </TextBlock>
                            <TextBlock Text="{DynamicResource plsContact}" FontSize="14" Foreground="#A1A1A1"/>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Grid.Row="1"  HorizontalAlignment="Center">
                        <TextBlock Text="{DynamicResource contactUs}" FontSize="16" FontWeight="SemiBold" Margin="15,0,0,0"/>
                        <TextBlock Text="{DynamicResource contactUsContent}" FontSize="14" Foreground="#A1A1A1" Margin="15,5,0,0" />
                        <TextBlock Text="{DynamicResource msgType}" FontSize="14" Margin="15,15,0,0" />
                        <ComboBox Name="cbMessageType" FontSize="14" Height="30" VerticalContentAlignment="Center" SelectedIndex="0" Width="300" HorizontalAlignment="Left" Margin="15,15,0,0">
                            <ComboBoxItem Content="{DynamicResource suggestion}"/>
                            <ComboBoxItem Content="{DynamicResource bugReport}"/>
                            <ComboBoxItem Content="{DynamicResource report}"/>
                        </ComboBox>
                        <TextBlock Text="{DynamicResource message}" FontSize="14" Margin="15,15,0,0" />
                        <TextBox Name="bodyTexBox" ScrollViewer.VerticalScrollBarVisibility="Auto" Height="300" FontSize="14" VerticalContentAlignment="Top" Width="600" HorizontalAlignment="Left" Margin="15,15,0,0" TextWrapping="Wrap" AcceptsReturn="True" MinLines="16" />
                        <Button Name="btnSendFeedBack" Style="{StaticResource WhiteButton}" Content="{DynamicResource send}" Height="30" Width="70" Margin="545,15,10,0" HorizontalAlignment="Left" FontSize="14"/>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
