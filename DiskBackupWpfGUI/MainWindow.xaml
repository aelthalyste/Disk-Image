<Window x:Class="DiskBackupWpfGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DiskBackupWpfGUI"
        mc:Ignorable="d"
        Title="{DynamicResource appFullName}" Icon="Resources/Icon/u62.png" Height="689" Width="1037" BorderThickness="0,1,0,0" BorderBrush="#D7D7D7" ResizeMode="CanMinimize">
    <Window.Resources>
        <ResourceDictionary Source="Resources\Lang\string_tr.xaml"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Rectangle Grid.Row="0" Fill="#F3F2F3" Grid.ColumnSpan="2"/>
        <Rectangle Fill="DarkGray" Margin="0,618,0,1" Grid.ColumnSpan="2" Grid.Row="1" />

        <Button Name="startButton" Width="32" Height="32" HorizontalAlignment="Right" Margin="0,4,47,4" Style="{StaticResource ImageButton}" Grid.Column="1">
            <Button.Content>
                <Image Height="40" Width="40" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Image.Style>
                        <Style TargetType="Image">
                            <Setter Property="Source" Value="Resources/Icon/icons8_stop_8.ico"/>
                        </Style>
                    </Image.Style>
                </Image>
            </Button.Content>
        </Button>
        
        <Button Name="stopButton" Width="32" Height="32" HorizontalAlignment="Right" Margin="0,4,10,4" Style="{StaticResource ImageButton}" Grid.Column="1">
            <Button.Content>
                <Image Height="28">
                    <Image.Style>
                        <Style TargetType="Image">
                            <Setter Property="Source" Value="Resources/Icon/icons8_refresh.ico" />
                        </Style>
                    </Image.Style>
                </Image>
            </Button.Content>
        </Button>
        
        <Button Name="refreshPolicyButton" HorizontalAlignment="Right" Margin="0,4,85,4" Style="{StaticResource ImageButton}" Width="32" Height="32" Grid.Column="1">
            <Button.Content>
                <Image Height="22">
                    <Image.Style>
                        <Style TargetType="Image">
                            <Setter Property="Source" Value="Resources/Icon/icons8_play.ico" />
                        </Style>
                    </Image.Style>
                </Image>
            </Button.Content>
        </Button>

        <Button Name="gorevOlustur" HorizontalAlignment="Left" Margin="10,4,85,4" Style="{StaticResource FolderButton}" Width="100" Height="32" Grid.Column="0">
            <Button.Content>
                <StackPanel Orientation="Horizontal">
                    <Image Height="22">
                        <Image.Style>
                            <Style TargetType="Image">
                                <Setter Property="Source" Value="Resources/Icon/u58.png" />
                            </Style>
                        </Image.Style>
                    </Image>
                    <TextBlock Text="{DynamicResource createTask}" VerticalAlignment="Center" Margin="2,2" Style="{StaticResource CreateTaskButtonText}"/>
                </StackPanel>
            </Button.Content>
        </Button>

        <StackPanel Orientation="Vertical">
            <TextBlock Name="runningStateBlock" Text="Yedek Alnıyor, C, 270 MB, %80"  FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,10,0,0" />
        </StackPanel>

    </Grid>
</Window>
