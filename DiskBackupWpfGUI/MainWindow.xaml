<Window x:Class="DiskBackupWpfGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DiskBackupWpfGUI"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        
        Title="{DynamicResource appFullName}" 
        WindowStartupLocation="CenterScreen" 
        WindowStyle="None" 
        Icon="Resources/Icon/NarBulut_PNG_Icon_White_V3.png" 
        BorderBrush="#194771" BorderThickness="1"
        Height="730" Width="1294"
        ResizeMode="CanMinimize">
    <!--<Window.Resources>
        <ResourceDictionary Source="Resources\Lang\string_tr.xaml"/>
    </Window.Resources>-->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="40"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Panel.ZIndex="2" Orientation="Horizontal" Grid.ColumnSpan="2" MouseDown="MyTitleBar_MouseDown" Margin="10,0">
            <Image Source="Resources/Icon/NarBulut_PNG_Icon_White_V3.png" Margin="0,0,5,0"/>
            <TextBlock Text="{DynamicResource appFullName}" Panel.ZIndex="2" Style="{StaticResource TitleBarText}"/>
        </StackPanel>
        <StackPanel Name="MyTitleBar" VerticalAlignment="Top" MouseDown="MyTitleBar_MouseDown" Panel.ZIndex="1" Grid.ColumnSpan="2" Grid.RowSpan="2">
            <Border Background="#27527B" Height="32" >
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Name="btnMainMin" Content="—" Margin="0,-2,0,0" VerticalContentAlignment="Top" FontWeight="Bold" Click="btnMainMin_Click" Style="{StaticResource TitleButton}" Width="40" />
                    <Button Name="btnMainClose" Content="🗙" Margin="0,-2,0,0" Click="btnMainClose_Click" Style="{StaticResource TitleButton}" Width="40" />
                </StackPanel>
            </Border>
        </StackPanel>
        <Rectangle Grid.Row="1" Fill="#F2F2F2" Grid.ColumnSpan="2"/>
        <ProgressBar Minimum="0" Maximum="100" Name="pbLoading" IsIndeterminate="True" Grid.Row="1" Grid.ColumnSpan="2">
            <ProgressBar.Foreground>
                <RadialGradientBrush RadiusY="5">
                    <GradientStop Color="#FF093C59" Offset="0"/>
                    <GradientStop Color="#FFB9DEF0" Offset="1"/>
                </RadialGradientBrush>
            </ProgressBar.Foreground>
        </ProgressBar>
        <StackPanel Grid.Row="1" Orientation="Horizontal" Grid.ColumnSpan="2">
            <TextBlock Text="{DynamicResource lastProcess}" FontSize="14" FontWeight="Bold" VerticalAlignment="Center" Margin="13,0,0,0"/>
            <TextBlock Name="txtRunningStateBlock" FontWeight="Bold" FontSize="14" VerticalAlignment="Center" Margin="5,0,0,0" Foreground="Red" />
        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Row="1" Grid.ColumnSpan="2">
            <TextBlock Name="txtMakeABackup" FontWeight="Bold" Foreground="#3A80BB" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,10,0,0" />
        </StackPanel>
        <Rectangle Height="1" Fill="#428BCA" VerticalAlignment="Bottom" Grid.Row="1" Grid.ColumnSpan="2" />
        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Right" Grid.Column="1">
            <TextBlock Name="txtLicenseNotActive" Text="{DynamicResource licenseNotActive}" Foreground="#FF0000" FontSize="14" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,15,0" Visibility="Collapsed"/>
            <DockPanel Name="stackDemo" Visibility="Collapsed">
                <TextBlock Text="{DynamicResource demo}" Foreground="#3A80BB" FontSize="14" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBlock Text="/" Foreground="#3A80BB" FontSize="14" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBlock Name="txtDemoDays" Text="30" Foreground="#3A80BB" FontSize="14" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBlock Text="{DynamicResource daysLeft}" Foreground="#3A80BB" FontSize="14" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,15,0"/>
            </DockPanel>
